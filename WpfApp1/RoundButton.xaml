<UserControl x:Class="WpfApp1.RoundButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             x:Name="self"
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <Ellipse Fill="{Binding ElementName=self, Path=Color}" Width="{Binding ElementName=self, Path=Diameter}" Height="{Binding ElementName=self, Path=Diameter}"/>
        <TextBlock VerticalAlignment="Center" Text="{Binding ElementName=self, Path=Text}" Foreground="Black" FontSize="{Binding ElementName=self, Path=FontSize}" TextAlignment="Center"/>
    </Grid>
</UserControl>
